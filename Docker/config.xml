<hivemq>

    <listeners>
        <tcp-listener>
            <port>1883</port>
            <bind-address>0.0.0.0</bind-address>
            <name>unsecured-listener</name>
        </tcp-listener>
        <tls-tcp-listener>
            <port>8883</port>
            <bind-address>0.0.0.0</bind-address>
            <name>my-secure-tcp-listener</name>
            <tls>
                <client-authentication-mode>REQUIRED</client-authentication-mode>
                <keystore>
                    <!-- Configuring the path to the key store -->
                    <path>/opt/TLS/hivemq.jks</path>
                    <!-- The password of the key store -->
                    <password>michaelg9</password>
                    <!-- The password of the private key -->
                    <private-key-password>michaelg9</private-key-password>
                </keystore>
                <truststore>
                    <path>/opt/TLS/hivemq-trust-store.jks</path>
                    <password>michaelg9</password>
                </truststore>
            </tls>
        </tls-tcp-listener>
    </listeners>

    <anonymous-usage-statistics>
        <enabled>true</enabled>
    </anonymous-usage-statistics>

</hivemq>